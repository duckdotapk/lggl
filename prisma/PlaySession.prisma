enum PlaySessionPlatform {
    WINDOWS
    MAC
    LINUX
    STEAM_DECK
    UNKNOWN
}

model PlaySession {
    id              Int      @id @default(autoincrement())
    createdDate     DateTime @default(now())
    lastUpdatedDate DateTime @updatedAt
    sortOrder       Int      @default(0)

    platform        PlaySessionPlatform
    startDate       DateTime
    endDate         DateTime
    playTimeSeconds Int                 @map("playTime")
    addedToTotal    Boolean             @default(false)
    isHistorical    Boolean             @default(false)
    notes           String?

    game_id Int

    game Game @relation(fields: [game_id], references: [id])
}
