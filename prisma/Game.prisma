model Game {
    id              Int      @id @default(autoincrement())
    createdDate     DateTime @default(now())
    lastUpdatedDate DateTime @default(now()) @updatedAt
    sortOrder       Int      @default(0)

    name        String    @unique
    sortName    String
    releaseDate DateTime?
    description String?
    notes       String?

    bannerImagePath String?
    coverImagePath  String?
    iconImagePath   String?
    logoImagePath   String?

    isEarlyAccess Boolean
    isFavorite    Boolean
    isHidden      Boolean
    isNsfw        Boolean
    isShelved     Boolean

    progressionType                String? // GameProgressionType?
    completionStatus               String? // GameCompletionStatus?
    firstPlayedDate                DateTime?
    firstPlayedDateApproximated    Boolean
    firstCompletedDate             DateTime?
    firstCompletedDateApproximated Boolean
    lastPlayedDate                 DateTime?
    playCount                      Int       @default(0)
    playTimeTotalSeconds           Int       @default(0)

    achievementSupport    String? // GameAchievementSupport?
    controllerSupport     String? // GameControllerSupport?
    modSupport            String? // GameModSupport?
    virtualRealitySupport String? // GameVirtualRealitySupport?

    playniteGameId String? @unique
    steamAppId     String?
    steamAppName   String?

    gameAntiCheats         GameAntiCheat[]
    gameDevelopers         GameDeveloper[]
    gameDrms               GameDrm[]
    gameEngines            GameEngine[]
    gameGenres             GameGenre[]
    gameInstallations      GameInstallation[]
    gameModes              GameMode[]
    gamePlatforms          GamePlatform[]
    gamePlayActions        GamePlayAction[]
    gamePublishers         GamePublisher[]
    gameRatingBoardRatings GameRatingBoardRating[]
    gameSources            GameSource[]
    seriesGames            SeriesGame[]
}
